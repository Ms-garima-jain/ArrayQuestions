let arr = [2,4,7,9,10,15];
for (let i =0; i<arr.length; i++)
{
    if (arr[i]%2==0)
    {
        for (let j =i+1; j<arr.length; j++)
        {
             if (arr[j]%2!==0)
             {
                  console.log (arr[i], "-", arr[j])
                  break;
             }
        }
    }
}
